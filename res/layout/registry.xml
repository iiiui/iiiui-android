<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout android:background="#ffffff" android:layout_width="fill_parent" 
	android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android" 
	android:orientation="vertical">
	<TextView android:layout_width="fill_parent" android:layout_height="fill_parent"
	 android:text="注册"
	/>
	<LinearLayout android:id="@+id/rlDigest"
        android:background="@drawable/panel_bg" android:layout_width="fill_parent"
        android:layout_height="100.0dip" android:layout_margin="5.0dip">
        <TableLayout 
            android:layout_width="fill_parent"   
            android:layout_height="wrap_content"
            android:layout_margin="2.0dip" 
        > 
        <TableRow android:layout_width="fill_parent">
	        <TextView android:textSize="15.0sp" android:textColor="#000000"
	            android:id="@+id/reg_username"
	            android:layout_width="wrap_content" android:layout_height="wrap_content"
	            android:layout_marginLeft="5.0dip" 
	            android:text="用户名" android:layout_alignParentLeft="true"
	            android:layout_alignParentTop="true" />
	            
	        <EditText android:textSize="15.0sp" android:textColor="#ff373737"
	            android:id="@+id/reg_username_content" android:layout_width="260dip"
	            android:layout_height="wrap_content"
	        />
        </TableRow> 
        
        <View android:id="@+id/reg_divider" android:background="#123456"
            android:layout_width="fill_parent" android:layout_height="1.0dip"
            android:layout_centerVertical="true" />
               
        <TableRow android:layout_width="fill_parent">    
	        <TextView android:textSize="15.0sp" android:textColor="#000000"
	            android:id="@+id/reg_emailmobile"
	            android:layout_width="wrap_content" android:layout_height="wrap_content"
	            android:text="邮箱或手机号" android:layout_margin="5.0dip"
	        />
	            
	        <EditText android:textSize="15.0sp" android:textColor="#ff373737"
	            android:id="@+id/reg_emailmobile_content" android:layout_width="260dip"
	            android:layout_height="wrap_content"
	        />
        </TableRow>
        
        <View android:id="@+id/reg_divider" android:background="#123456"
            android:layout_width="fill_parent" android:layout_height="1.0dip"
            android:layout_centerVertical="true" />
            
        <TableRow android:layout_width="fill_parent">
	        <TextView android:textSize="15.0sp" android:textColor="#000000"
	            android:id="@+id/reg_pwd"
	            android:layout_width="wrap_content" android:layout_height="wrap_content"
	            android:layout_marginLeft="5.0dip" 
	            android:text="密码" android:layout_alignParentLeft="true"
	            android:layout_alignParentTop="true" />
	            
	        <EditText android:textSize="15.0sp" android:textColor="#ff373737"
	            android:id="@+id/reg_pwd_content" android:layout_width="260dip"
	            android:layout_height="wrap_content"
	        />
        </TableRow>
            
        <View android:id="@+id/reg_divider" android:background="#123456"
            android:layout_width="fill_parent" android:layout_height="1.0dip"
            android:layout_centerVertical="true" />
            
        <TableRow android:layout_width="fill_parent">    
	        <TextView android:textSize="15.0sp" android:textColor="#000000"
	            android:id="@+id/reg_portrait"
	            android:layout_width="wrap_content" android:layout_height="wrap_content"
	            android:text="头像" android:layout_margin="5.0dip"
	        />
	            
	        <EditText android:textSize="15.0sp" android:textColor="#ff373737"
	            android:id="@+id/tvAccount_info_content" android:layout_width="260dip"
	            android:layout_height="wrap_content"
	        />
        </TableRow>
        </TableLayout> 
     </LinearLayout>
</LinearLayout>