<?xml version="1.0" encoding="UTF-8"?>
<FrameLayout android:layout_width="fill_parent" 
	android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android" 
	android:orientation="vertical">
	
	<TextView android:layout_width="fill_parent" android:layout_height="50dip" 
	  android:background="#5f8cbe" android:text="IIIUI LOGO" android:textSize="22.0sp"
	  android:gravity="center" android:layout_centerVertical="true"
	/>
	
	<ScrollView android:id="@+id/scrollview"
		android:layout_width="fill_parent" android:layout_height="420dip"
		android:layout_gravity="center"
		android:background="#ffffff">
		<LinearLayout
  			android:orientation="vertical"
  			android:layout_width="fill_parent"
  			android:layout_height="wrap_content">
			<TextView
				android:text="主页顶部。。。" android:textColor="#000000"
				android:layout_height="400dp" 
				android:layout_width="fill_parent">
			</TextView>
			<TextView
				android:text="主页底部。。。" android:textColor="#000000"
				android:layout_height="300dp" 
				android:layout_width="fill_parent">
			</TextView>
		</LinearLayout>
	</ScrollView>
	 
	<!--<include android:id="@+id/menu_bottom" layout="@layout/menu_bottom" android:layout_marginBottom ="0.0dip"
      android:layout_alignParentBottom="true" android:layout_width="fill_parent" android:layout_height="wrap_content" />
    -->
    <LinearLayout android:orientation="horizontal"
		android:id="@+id/tabbar" android:background="@layout/border"
		android:layout_width="fill_parent" android:layout_gravity="bottom"
		android:layout_height="50dip">
		
		<RelativeLayout android:layout_width="61dip" android:layout_height="fill_parent">
			<TextView android:layout_width="fill_parent" android:layout_height="wrap_content"
			 android:text="首页" android:textSize="22.0sp" android:gravity="center" 
			 android:layout_centerVertical="true"
			/>
		</RelativeLayout>
		
		<RelativeLayout android:layout_width="61dip" android:layout_height="fill_parent">
			<TextView android:layout_width="fill_parent" android:layout_height="wrap_content"
			    android:text="搜索" android:textSize="22.0sp" android:gravity="center"
			    android:layout_centerVertical="true"
			/>
		</RelativeLayout>
		
		<RelativeLayout android:layout_width="76dip" android:layout_height="fill_parent">
			<TextView android:layout_width="fill_parent" android:layout_height="wrap_content"
			    android:text="分享" android:textSize="22.0sp" android:gravity="center"
			    android:layout_centerVertical="true"
			/>
		</RelativeLayout>
		
		<RelativeLayout android:layout_width="61dip" android:layout_height="fill_parent">
			<TextView android:layout_width="fill_parent" android:layout_height="wrap_content"
			    android:text="消息" android:textSize="22.0sp" android:gravity="center"
			    android:layout_centerVertical="true"
			/>
		</RelativeLayout>
		
		<RelativeLayout android:layout_width="61dip" android:layout_height="fill_parent">
			<TextView android:layout_width="fill_parent" android:layout_height="wrap_content"
			   android:text="主页" android:textSize="22.0sp" android:gravity="center"
			   android:layout_centerVertical="true"
			/>
		</RelativeLayout>
		
	</LinearLayout>
</FrameLayout>

