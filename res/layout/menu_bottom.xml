<RelativeLayout android:background="#5f8cbe"  
    android:layout_width="fill_parent" android:layout_height="50dip"  
    xmlns:android="http://schemas.android.com/apk/res/android">  
  
    <Button android:id="@+id/menu_bottom_1" android:textColor="#ffffff"  
        android:text="首页" android:layout_marginTop="5dip"
        android:layout_width="60dip" android:layout_height="wrap_content"  
        android:layout_marginLeft="12.0dip" android:layout_alignParentLeft="true"  
        android:layout_centerVertical="true" />  
  
    <Button android:id="@+id/menu_bottom_2" android:textColor="#ffffff" 
        android:text="搜索" android:layout_marginTop="5dip"
        android:layout_width="60dip"  
        android:layout_height="wrap_content" android:layout_marginRight="12.0dip"  
        android:layout_alignParentRight="true" android:layout_centerVertical="true" />  
  
    <Button android:id="@+id/menu_bottom_3" android:textColor="#ffffff" 
        android:text="分享" android:layout_marginTop="5dip"
        android:layout_width="60dip"  
        android:layout_height="wrap_content" android:layout_marginRight="12.0dip"  
        android:layout_alignParentRight="true" android:layout_centerVertical="true" />  
        
    <Button android:id="@+id/menu_bottom_4" android:textColor="#ffffff" 
        android:text="消息" android:layout_marginTop="5dip"
        android:layout_width="60dip"  
        android:layout_height="wrap_content" android:layout_marginRight="12.0dip"  
        android:layout_alignParentRight="true" android:layout_centerVertical="true" />  
  
    <Button android:id="@+id/menu_bottom_5" android:textColor="#ffffff" 
        android:text="主页" android:layout_marginTop="5dip"
        android:layout_width="60dip"  
        android:layout_height="wrap_content" android:layout_marginRight="12.0dip"  
        android:layout_alignParentRight="true" android:layout_centerVertical="true" />
  
</RelativeLayout> 