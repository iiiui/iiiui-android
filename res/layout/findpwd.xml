<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout android:background="#ffffff" android:layout_width="fill_parent" 
	android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android" 
	android:orientation="vertical">

	<include android:id="@+id/findpwd_head" layout="@layout/findpwd_head"  
        android:layout_width="fill_parent" android:layout_height="wrap_content" />	
	<LinearLayout android:id="@+id/registry"
        android:background="@drawable/panel_bg" android:layout_width="fill_parent"
        android:layout_height="wrap_content" android:layout_margin="5.0dip">
        <TableLayout 
            android:layout_width="fill_parent"   
            android:layout_height="wrap_content"
        > 
        
        <TableRow android:layout_width="fill_parent">
	        <TextView android:textSize="15.0sp" android:textColor="#000000"
	            android:id="@+id/findpwd_username"
	            android:layout_width="wrap_content" android:layout_height="wrap_content"
	            android:layout_marginTop="6.0dip" android:layout_marginLeft="5.0dip" 
	            android:text="用户名" android:layout_margin="5.0dip" android:layout_alignParentLeft="true"
	            android:layout_alignParentTop="true" />
	            
	        <EditText android:textSize="15.0sp" android:textColor="#ff373737"
	        	android:layout_marginTop="5.0dip"
	            android:id="@+id/findpwd_username_content" android:layout_width="210dip"
	            android:layout_height="wrap_content"
	        />
        </TableRow> 
        
        <View android:id="@+id/findpwd_divider" android:background="#d4d4d4"
            android:layout_width="fill_parent" android:layout_height="1.0dip"/>
               
        <TableRow android:layout_width="fill_parent">    
	        <TextView android:textSize="15.0sp" android:textColor="#000000"
	            android:id="@+id/findpwd_emailmobile"
	            android:layout_marginTop="12.0dip"
	            android:layout_width="wrap_content" android:layout_height="wrap_content"
	            android:text="邮箱/手机" android:layout_margin="5.0dip" android:layout_alignParentLeft="true"
	            android:layout_alignParentTop="true"
	        />
	            
	        <EditText android:textSize="15.0sp" android:textColor="#ff373737"
	        	android:layout_marginTop="5.0dip"
	            android:id="@+id/findpwd_emailmobile_content" android:layout_width="220dip"
	            android:layout_height="wrap_content"
	        />
        </TableRow>
        </TableLayout> 
     </LinearLayout>
</LinearLayout>